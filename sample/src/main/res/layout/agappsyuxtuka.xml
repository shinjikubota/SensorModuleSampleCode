<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:onClick="tsugi"
        android:text="次へ"
        android:textSize="50dp"
        android:layout_toEndOf="@+id/tv"
        android:layout_below="@+id/tv" />


    <Spinner
        android:id="@+id/pod1"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView20"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_marginTop="21dp"
        android:text="出荷先と出荷量を入力して下さい"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="出荷先"
        android:textSize="40dp"
        android:layout_below="@+id/textView20"
        android:layout_toStartOf="@+id/button5"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="出荷物"
        android:textSize="40dp"
        android:layout_below="@+id/pod1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView22"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="42dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="出荷量（個）"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignEnd="@+id/textView20"
        android:layout_marginEnd="58dp" />


    <EditText
        android:id="@+id/editT"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:layout_alignTop="@+id/tv"
        android:layout_alignStart="@+id/textView24" />

</RelativeLayout>